{
  "version": 2,
  "name": "subscription-manager-backend",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/health",
      "dest": "/index.js"
    },
    {
      "src": "/",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI_PRODUCTION": "@mongodb_uri_production",
    "JWT_SECRET": "@jwt_secret",
    "JWT_REFRESH_SECRET": "@jwt_refresh_secret",
    "FRONTEND_URL_PRODUCTION": "@frontend_url_production"
  },
  "regions": ["iad1"]
}
